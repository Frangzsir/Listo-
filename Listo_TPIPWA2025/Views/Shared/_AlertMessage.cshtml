@if (TempData["AlertMessage"] != null && TempData["AlertType"] != null)
{
    var type = TempData["AlertType"]?.ToString(); // success, danger, warning, info
    <div class="alert alert-@type alert-dismissible fade show text-center fw-bold" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}